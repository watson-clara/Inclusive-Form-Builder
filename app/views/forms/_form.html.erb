<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: form, local: true, class: "needs-validation", data: { controller: "form-validation" }) do |f| %>
      <% if form.errors.any? %>
        <div class="alert alert-danger" role="alert" aria-labelledby="form-errors-heading">
          <h2 id="form-errors-heading" class="h6"><%= pluralize(form.errors.count, "error") %> prevented this form from being saved:</h2>
          <ul>
            <% form.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", required: true, 
                         aria: { required: true, describedby: "title-help" } %>
        <div id="title-help" class="form-text">The title will be displayed at the top of your form.</div>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 3,
                        aria: { describedby: "description-help" } %>
        <div id="description-help" class="form-text">Provide instructions or context for people filling out the form.</div>
      </div>

      <div class="mb-3 form-check">
        <%= f.check_box :active, class: "form-check-input", 
                        aria: { describedby: "active-help" } %>
        <%= f.label :active, class: "form-check-label" %>
        <div id="active-help" class="form-text">Inactive forms cannot be filled out by patients.</div>
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to "Cancel", forms_path, class: "btn btn-outline-secondary me-md-2" %>
        <%= f.submit class: "btn btn-primary", data: { disable_with: "Saving..." } %>
      </div>
    <% end %>
  </div>
</div> 