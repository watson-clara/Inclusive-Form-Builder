<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">My Forms</h1>
    <%= link_to new_form_path, class: "btn btn-primary btn-space-top" do %>
      <i class="fas fa-plus me-2"></i>Create New Form
    <% end %>
  </div>

  <% if @forms.any? %>
    <div class="row">
      <% @forms.each do |form| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h2 class="h5 mb-3"><%= form.title %></h2>
              <p class="text-muted small mb-3"><%= truncate(form.description, length: 100) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge <%= form.active? ? 'bg-success' : 'bg-secondary' %>">
                  <%= form.active? ? 'Active' : 'Inactive' %>
                </span>
                <%= link_to "View Details", form_path(form), class: "btn btn-sm btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
      <h2 class="h4 mb-3">No Forms Yet</h2>
      <p class="text-muted mb-4">Create your first form to get started</p>
      <%= link_to new_form_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Create New Form
      <% end %>
    </div>
  <% end %>
</div> 